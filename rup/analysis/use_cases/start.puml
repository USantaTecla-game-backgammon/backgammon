@startuml
allow_mixing

actor Player

package Views {
    package Match3 as "Match"{
        object MatchView
    }
}

package Models {
    package MatchModel as "Match"{
        object Match
    }
}

package Controllers {
    package Menu {
        object MenuController
        object RollDiceController
    }

    package Match2 as "Match" {
        object StartController
    }
}

StartController --> RollDiceController
note on link
    execute()
end note

MenuController -down-> StartController
note on link
    execute(StartAction)
end note

StartController --> MatchView
note on link
    show_title()
    interact_goal() : goal
end note

StartController --> Match
note on link
    start(goal)
end note

Player --> MatchView
note on link
    interact()
end note

@enduml
